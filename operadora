Algoritmo "operadora"
//Uma operadora de telefonia cobra R$ 50.00 por um plano básico que dá direito
//a 100 minutos de telefone. Cada minuto
Var
   // Seção de Declarações das variáveis
   minutos : inteiro
   preco : real
   excedido : real
   plano : inteiro
   totalExcedido : real

Inicio
   // Seção de Comandos, procedimento, funções, operadores, etc...
   escreva("Digite a quantidade de minutos: ")
   leia(minutos)

   preco <- 50.00
   excedido <- 2.00
   plano <- 100

   se minutos > 100 entao
      totalExcedido <- ((minutos - plano) * excedido + preco)
      escreva("Valor a pagar: R$ ", totalExcedido:4:2)
   senao
      escreva("Valor a pagar: R$ ", preco:4:2)
   fimse


Fimalgoritmo
